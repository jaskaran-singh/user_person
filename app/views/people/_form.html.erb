<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
    </div>
    <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
<div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_home %><br />
    <%= f.text_field :phone_home %>
  </div>
  <div class="field">
    <%= f.label :phone_cell %><br />
    <%= f.text_field :phone_cell %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender,["Male","Female"] %>
  </div>
  <div class="field">
  	<%= f.label :type%><br />
    <%= f.select :person_type,["Camper","Employee","Parent"] %>
  </div>
  <div class="field">
  	<%= f.label :user_id%><br />
    <%= f.select :user_id, @users.map {|u| [u.email_address, u.id] unless @users.empty?} ,:prompt=>true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
