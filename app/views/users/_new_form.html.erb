<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <%end%>
  <h1>User Details</h1>
<div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </div>
  <h1>Person Details</h1>
   <%=f.fields_for :persons do |p|%>
  <div class="field">
    <%= p.label :first_name %><br />
    <%= p.text_field :first_name %>
    </div>
    <div class="field">
    <%= p.label :last_name %><br />
    <%= p.text_field :last_name %>
  </div>
<div class="field">
    <%= p.label :email %><br />
    <%= p.text_field :email %>
  </div>
  <div class="field">
    <%= p.label :phone_home %><br />
    <%= p.text_field :phone_home %>
  </div>
  <div class="field">
    <%= p.label :phone_cell %><br />
    <%= p.text_field :phone_cell %>
  </div>
  <div class="field">
    <%= p.label :gender %><br />
    Male <%= p.radio_button :gender, "Male" %>
    Female<%= p.radio_button :gender,"Female" %>
  </div>
  <div class="field">
  	<%= p.label :type%><br />
    <%= p.select :person_type,["Camper","Employee","Parent"] %>
  </div>
  <%end%> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>